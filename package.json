{
  "name": "ranked.vote",
  "description": "Detailed reports on ranked-choice elections",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "RANKED_VOTE_DB=report_pipeline/reports.sqlite3 vite dev",
    "prebuild": "svelte-kit sync",
    "build": "RANKED_VOTE_DB=report_pipeline/reports.sqlite3 vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "generate-images": "bun scripts/generate-share-images.mjs",
    "report": "cd report_pipeline && ./report.sh && cd .. && bun scripts/load-reports.ts",
    "report:load-db": "bun scripts/load-reports.ts",
    "report:sync": "cd report_pipeline && ./sync.sh",
    "report:extract": "cd report_pipeline && ./extract-from-archives.sh",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:ci": "bun test --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.2",
    "better-sqlite3": "^12.6.2",
    "exceljs": "^4.4.0",
    "tippy.js": "^6.3.7",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.2.1",
    "husky": "^9.1.7",
    "puppeteer": "^24.37.2",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
